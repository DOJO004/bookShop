<h3>新增酷踫券</h3>
<div class='flex justify-center'>
  <%= form_with(model: @coupon, url: coupon_index_path, data: { turbo: false}) do |f|%>
    <%= f.label :name, '名稱' %>
    <%= f.text_field :name, class:'input_text' %>
    <%= f.label :coupon_type, '類型' %>
    <%= f.select :coupon_type, options_for_select(['百分比', '折扣金額']), {}, class: 'input_select w-full' %>
    <%= f.label :discount, '折扣比例/折扣金額' %>
    <%= f.number_field :discount, class:'input_number', step: '0.1', placeholder: '0.9 / 500' %>
    <%= f.label :expiration_date, '到期日' %>
    <%= f.date_field :expiration_date, class:'input_date w-full' %>
    <%= f.submit '新增', class:'submit-btn' %>
  <% end %>
</div>
