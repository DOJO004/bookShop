<h3>new book</h3>
<div class='flex justify-center'>
  <%= form_with(model: @book, data:{turbo: false}) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <p>red word was required</p>
      </div>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :author %>
    <%= f.text_field :author %>
    <%= f.label :stocks %>
    <%= f.number_field :stocks %>
    <%= f.label :publisher %>
    <%= f.text_field :publisher %>
    <%= f.label :publish_date %>
    <%= f.date_field :publish_date %>
    <%= f.label :isbn %>
    <%= f.number_field :isbn %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>
